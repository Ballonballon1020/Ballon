<odoo>
    <data>
        <record id="wbl_sale_order_delivery_slot_info" model="ir.ui.view">
            <field name="name">wbl.sale.order.delivery.slot.info</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sales_person']" position="after">
                    <group name="delivery_info" string="Delivery Information">
                        <field name="delivery_date"/>
                        <field name="delivery_slot" readonly="1"/>
                    </group>
                </xpath>
                <xpath expr="//group[@name='sale_shipping']" position="replace">
                    <group name="sale_shipping" string="Shipping">
                        <label for="commitment_date" string="Delivery Date"/>
                        <div name="commitment_date_div" class="o_row">
                            <field name="commitment_date" readonly="state == 'cancel' or locked"/>
                            <span name="expected_date_span" class="text-muted">Expected:
                                <field name="commitment_date" class="oe_inline" widget="date"/>
                            </span>
                        </div>
                        <field name="delivery_slot" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
