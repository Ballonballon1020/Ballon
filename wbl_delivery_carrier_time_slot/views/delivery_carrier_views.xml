<odoo>
   <data>
       <record id="view_delivery_carrier_time_slot_form" model="ir.ui.view">
           <field name="name">delivery.time.slot.carrier.form</field>
        <field name="model">delivery.carrier</field>
           <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
           <field name="arch" type="xml">
               <xpath expr="//page[@name='description']" position="after">
                   <page string="Delivery Time Slot" name="delivery_time_slot">
                       <group name="time_slot_settings">
                           <field name="delivery_date"/>
                           <field name="delivery_time_slot" invisible="not delivery_date"/>
                           <field name="start_day_after" invisible="not delivery_date"/>
                           <field name="order_preparation_time" invisible="not delivery_time_slot or not delivery_date" widget="radio"/>
                           <field name="time_interval" invisible="not delivery_time_slot or not delivery_date"/>
                           <field name="max_order_in_a_slot" invisible="not delivery_time_slot or not delivery_date"/>
                           <field name="time_schedule" widget="one2many" invisible="not delivery_time_slot or not delivery_date">
                               <list string="Time Schedule" editable="bottom">
                                   <field name="week_days"/>
                                   <field name="open_time_hours"/>
                                   <field name="open_time_minutes"/>
                                   <field name="close_time_hours"/>
                                   <field name="close_time_minutes"/>
                               </list>
                           </field>
                       </group>
                   </page>
               </xpath>
           </field>
       </record>
   </data>
</odoo>
